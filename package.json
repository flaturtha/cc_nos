{
  "name": "cc_nos",
  "private": true,
  "workspaces": [
    "apps/*",
    "apps/medusa/*",
    "apps/medusa/apps/*",
    "packages/*",
    "tools/*"
  ],
  "scripts": {
    "start:remix": "npm run dev --workspace=apps/remix",
    "start:sanity": "npm run dev --workspace=apps/sanity",
    "start:medusa-backend": "yarn workspace medusa-backend dev",
    "start:storefront": "yarn workspace storefront dev",
    "build": "npm run build --workspaces",
    "lint": "npm run lint --workspaces"
  },
  "devDependencies": {
    "turbo": "^2.3.1"
  },
  "packageManager": "yarn@4.5.0"
}
